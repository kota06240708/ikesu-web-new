    .top-kv-wrap
      h2.js-title.top-kv-title.top-kv-title--pc the creative
        br
        |hacker collective

      h2.js-title.top-kv-title.top-kv-title--sp the 
        br.top-newline
        |creative
        br
        |hacker 
        br.top-newline
        |collective

    .top-menu-wrap
      include /shared/templates/module/_menu
